public class Truck extends Thread implements TruckProperties 
{
	private final Role role;	
	private Mode mode;
	
	Truck(Role role)
	{
		this.role = role;
	}
	
   
    public void run()
    {
    	
    }


	public Mode getMode() {
		return mode;
	}


	public void setMode(Mode mode) {
		this.mode = mode;
	}


	public Role getRole() {
		return role;
	}
}
